<h2>Create an event</h2>
<div class="row">
    <div class="col-md-6">
        <form action="/events/create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Name*:
                    <input type="text" name="name" class="form-control" required />
                </label>
            </div>

            <div class="form-group">
                <label>Location*:
                    <input name="location" class="form-control" required />
                </label>
            </div>

            <div class="form-group">
                <label>Date*:
                    <input type="datetime-local" id="event-time" name="date" value="current_date" min="2018-06-07T00:00"
                        required />
                </label>
            </div>

            <div class="form-group">
                <label>Details:
                    <input name="details" cols="30" rows="4" class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <label>Image*:
                    <input type="file" name="event-cover-image" class="form-control-file" required/>
                </label>
            </div>
            <input type="hidden" name="createdBy" value="{{session.currentUser.email}}" />

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<p>* required</p>








