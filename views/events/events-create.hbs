

<h2>Create an event</h2>
<div class="row">
    <div class="col-md-6">
        <form action="/events/create" method="post" enctype="multipart/form-data"> {{!-- !!! --}}
            <div class="form-group">
                <label>Name:
                    <input type="text" name="name" class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <label>Location:
                    <textarea name="location" class="form-control"> </textarea>
                </label>
            </div>

            <div class="form-group">
                <label>Date:
                    <textarea name="date" class="form-control"> </textarea>
                </label>
            </div>

            <div class="form-group">
                <label>Details:
                    <textarea name="details" cols="30" rows="4" class="form-control"> </textarea>
                </label>
            </div>

            <div class="form-group">
                <label>Image:
                    <input type="file" name="event-cover-image" class="form-control-file" />
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>