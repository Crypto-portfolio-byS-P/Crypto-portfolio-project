<section class="vh-100 bg-image " style="dark">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3 ">
        <div class="container h-100 ">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card shadow" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Edit Event</h2>

                            <form action="/events/{{_id}}/edit" method="post" enctype="multipart/form-data">

                                <div class="form-outline mb-4">
                                    <input type="text" name="name" class="form-control form-control-lg" value="{{name}}"
                                        required />
                                    <label class="form-label">Name</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" name="location" class="form-control form-control-lg"
                                        value="{{location}}" required />
                                    <label class="form-label">Location</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="datetime-local" id="event-time" name="date" value="{{date}}"
                                        min="2018-06-07T00:00" required />
                                    <label class="form-label">Date</label>

                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" name="details" class="form-control form-control-lg"
                                        value="{{details}}" />
                                    <label class="form-label">Details</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <label>Image:
                                        <input type="file" name="event-cover-image"
                                            class="form-control form-control-lg" required />
                                        <input type="text" name="existingImage" hidden value="{{imageUrl}}" />
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="button submit"
                                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Save
                                        changes
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>