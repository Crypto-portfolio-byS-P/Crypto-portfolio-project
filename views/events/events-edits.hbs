<h2>Update event</h2>
<div class="row">
    <div class="col-md-6">
        <form action="/events/{{_id}}/edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Name:
                    <input type="text" name="name" class="form-control" value="{{name}}" />
                </label>
            </div>

            <div class="form-group">
                <label>Location:
                    <input type="text" name="location" class="form-control" value="{{location}}" />
                </label>
            </div>

            <div class="form-group">
                <label>Date:
                    <input type="text" name="date" class="form-control" value="{{date}}" />
                </label>
            </div>

            <div class="form-group">
                <label>Details:
                    <textarea name="details" cols="30" rows="4" class="form-control">{{details}}
          </textarea>
                </label>
            </div>

            <div class="form-group">
                <label>Image:
                    <input type="file" name="event-cover-image" class="form-control-file" />
                    <input type="text" name="existingImage" hidden value="{{imageUrl}}">
                </label>
            </div>

            <button type="submit" class="btn btn-success">Save changes</button>

        </form>
    </div>
</div>