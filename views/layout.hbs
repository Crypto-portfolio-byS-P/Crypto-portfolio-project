<body style="padding: 10; margin: 0 10 0 10">
  <header>
    <nav class="navbar navbar-expand-lg ">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Crypto Link</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/crypto/news">News</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/crypto/charts">Charts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/events">Events</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/crypto/learn">Learn</a>
            </li>




            {{#if session.currentUser}}
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="/auth/profile" id="navbarDropdown" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                {{session.currentUser.username}}
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item nav-link" href="/auth/profile">Profile</a></li>
                <li><a class="dropdown-item nav-link" href="/crypto/portfolio">Portfolio</a></li>
                <li><a class="dropdown-item nav-link" href="/crypto/watchlist">Watchlist</a></li>
              </ul>
            </li>
            <li class="nav-item"></li>
            <a class="nav-link" href="/auth/logout/">Log out</a>
            </li>
            {{else}}
            <li class="nav-item"></li>
            <a class="nav-link" href="/auth/login/">Log in</a>
            </li>
            <li class="nav-item"></li>
            <a class="nav-link" href="/auth/signup">Register</a>
            </li>
            {{/if}}




          </ul>
        </div>
      </div>
    </nav>

